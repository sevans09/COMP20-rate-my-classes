<!doctype html>
<html>
<head>
	<% include ../partials/header.ejs %>
	
    <title>Rate</title>

</head>
<body>
	<% include ../partials/nav.ejs %>
	<!-- Begin page content -->
	<main role="main" class="flex-shrink-0">
			<div class="container" style="background-color: rgba(255, 255, 255, 0.8); padding: 2% 2%; margin-top: 2%;  margin-bottom: 2%">
				<h1 class="head text-center">Rate a Class</h1>
				<form>
				<div class="container">
					<div class="row">
						<div class="col-3">
						<h3 class="head blue" style="float: right; margin-top: 8%">Step 1: </h3>
						</div>

						<div class="col-9">
						<form-group>
							<div class="container text-center" style="padding: 2% 0 2% 0">
								<label class="mr-sm-2" for="department">Select a Department:</label>
								<select class="custom-select my-1 mr-sm-2" id="department" style="width: 20%">
									<option selected>Select</option>
									<option value="1">AAST</option>
									<option value="2">ACL</option>
									<option value="3">AFR</option>
									<option value="4">AMER</option>
									<option value="5">ANTH</option>
									<option value="6">ARB</option>
									<option value="7">ARCH</option>
									<option value="8">AST</option>
									<option value="9">BIO</option>
									<option value="10">BIOE</option>
									<option value="11">BME</option>
									<option value="12">CEE</option>
									<option value="13">CH</option>
									<option value="14">CHBE</option>
									<option value="15">CHEM</option>
									<option value="16">CHNS</option>
									<option value="17">CIS</option>
									<option value="18">CIV</option>
									<option value="19">CLS</option>
									<option value="20">COMP</option>
									<option value="21">CSHD</option>
									<option value="22">CST</option>
									<option value="23">CVS</option>
									<option value="24">DATA</option>
									<option value="25">DLS</option>
									<option value="26">DNC</option>
									<option value="27">DRW</option>
									<option value="28">EC</option>
									<option value="29">ED</option>
									<option value="30">EE</option>
									<option value="31">ELS</option>
									<option value="32">EM</option>
									<option value="33">ENE</option>
									<option value="34">ENG</option>
									<option value="35">ENP</option>
									<option value="36">ENV</option>
									<option value="37">EOS</option>
									<option value="38">ES</option>
									<option value="39">EXP</option>
									<option value="40">FAH</option>
									<option value="41">FLM</option>
									<option value="42">FLMC</option>
									<option value="43">FMS</option>
									<option value="44">FR</option>
									<option value="45">GER</option>
									<option value="46">GIS</option>
									<option value="47">GRA</option>
									<option value="48">GRK</option>
									<option value="49">HEB</option>
									<option value="50">HIST</option>
								</select>
							</div>
						</form-group> 
						</div>
					
					</div>

					<div class="row">
						<div class="col-3">
						<h3 class="head blue" style="float: right; margin-top: 8%">Step 2: </h3>
						</div>

						<div class="col-9">
						<form-group>
							<div class="container text-center" style="padding: 2% 0 2% 0">
								<label class="mr-sm-2" for="department">Select a Course Number:</label>
								<select class="custom-select my-1 mr-sm-2" id="department" style="width: 20%">
									<option selected>Select</option>
									<option value="1">10</option>
									<option value="2">11</option>
									<option value="3">15</option>
									<option value="3">20</option>
								</select>
							</div>
						</form-group> 
						</div>
						
					</div>

					<div class="row">
						<div class="col-3">
						<h3 class="head blue" style="float: right; margin-top: 8%">Step 3: </h3>
						</div>

						<div class="col-9">
						<form-group>
							<div class="container text-center" style="padding: 2% 0 2% 0">
								<label class="mr-sm-2" for="department">Rate the Overall Course:</label>
								<select class="custom-select my-1 mr-sm-2" id="department" style="width: 20%">
									<option selected>Select</option>
									<option value="1">1–Terrible</option>
									<option value="2">2-Mediocre</option>
									<option value="3">3-Average</option>
									<option value="3">4-Good</option>
									<option value="3">5-Awesome</option>
								</select>
							</div>
						</form-group> 
						</div>
							
					</div>

					<div class="row">
						<div class="col-3">
						<h3 class="head blue" style="float: right; margin-top: 8%">Step 4: </h3>
						</div>

						<div class="col-9">
						<form-group>
							<div class="container text-center" style="padding: 2% 0 2% 0">
								<label class="mr-sm-2" for="department">Rate the Level of Difficulty:</label>
								<select class="custom-select my-1 mr-sm-2" id="department" style="width: 20%">
									<option selected>Select</option>
									<option value="1">1-I just have to show up to get an A</option>
									<option value="2">2-Pretty Easy</option>
									<option value="3">3-Hard, but manageable</option>
									<option value="4">4-TOuGh</option>
									<option value="5">5–Hardest class I've ever taken</option>
								</select>
							</div>
						</form-group> 
						</div>			
					</div>

					<div class="row">
							<div class="col-3">
							<h3 class="head blue" style="float: right; margin-top: 8%">Step 5: </h3>
							</div>
	
							<div class="col-9">
							<form-group>
								<div class="container text-center" style="padding: 2% 0 2% 0">
									<label class="mr-sm-2" for="department">Grade Received:</label>
									<select class="custom-select my-1 mr-sm-2" id="department" style="width: 20%">
										<option selected>Select</option>
										<option value="1">A+</option>
										<option value="2">A</option>
										<option value="3">A-</option>
										<option value="4">B+</option>
										<option value="5">B</option>
										<option value="6">B-</option>
										<option value="7">C+</option>
										<option value="8">C</option>
										<option value="9">C-</option>
										<option value="10">D+</option>
										<option value="11">D</option>
										<option value="12">D-</option>
										<option value="13">F</option>
										<option value="14">Drop/Withdrawal</option>
										<option value="15">Incomplete</option>
										<option value="16">Not Sure Yet</option>
										<option value="17">Would Rather Not Say</option>
										<option value="18">Audit/No Grade</option>
									</select>
								</div>
							</form-group> 
							</div>			
						</div>

						<div class="row">
							<div class="col-3">
							<h3 class="head blue" style="float: right; margin-top: 8%">Step 6: </h3>
							</div>
	
							<div class="col-9">
							<form-group>
								<div class="text-center form-group">
									<label for="exampleFormControlTextarea1">Leave some <u>constructive</u> comments:</label>
									<p class="text-muted"> Please refrain from using harmful language.</p>
									<textarea style="width: 80%; margin: auto" class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
								</div>
							</form-group> 
							</div>			
						</div>

						<div class="container text-center" style="padding: 2% 0 2% 0">
							<button class="btn btn-primary go-btn" type="submit">Submit</button>
						</div>
				</div>
				</form> 
			</div>
		</main>

	<% include ../partials/footer.ejs %>
</body>
</html>
